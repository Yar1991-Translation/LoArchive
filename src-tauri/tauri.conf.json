{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "LoArchive",
  "version": "1.0.0",
  "identifier": "com.loarchive.desktop",
  "build": {
    "frontendDist": "../templates",
    "devUrl": "http://localhost:5000",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "LoArchive",
        "label": "main",
        "width": 1200,
        "height": 750,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": false,
        "transparent": false,
        "shadow": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "externalBin": [
      "binaries/loarchive-backend"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      },
      "nsis": {
        "oneClick": false,
        "perMachine": false,
        "allowElevation": true,
        "installerIcon": "icons/icon.ico",
        "uninstallerIcon": "icons/icon.ico",
        "displayLanguageSelector": false,
        "languages": ["SimpChinese", "English"]
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
